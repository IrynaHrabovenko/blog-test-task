<h1>Posts</h1>
<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Category</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.category.title %></td>
        <td><%= link_to 'Show Category', [@category] %></td>
        <td><%= link_to 'Show Post', [@category, post] %></td>
        <td><%= button_to "Destroy Post", [@category, post], method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Post', new_category_post_path(@category) %>
